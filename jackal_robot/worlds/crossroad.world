    </model>

    <!-- Right Wall (outer edge of right sidewalk) -->
    <model name='wall_right'>
      <static>1</static>
      <link name='link'>
        <pose>0 5.5 0.15 0 0 0</pose>
        <collision name='collision'>
          <geometry>
            <box>
              <size>20 0.1 0.3</size>
            </box>
          </geometry>
        </collision>
        <visual name='visual'>
          <geometry>
            <box>
              <size>20 0.1 0.3</size>
